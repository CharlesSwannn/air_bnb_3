<div class="container">
  <h1>Here are all your tasks</h1>
  <h1><%= link_to  "➕", new_task_path %></h1>
  <% @tasks.each do |task| %>
    <%= link_to task_path(task) do %>
      <h3><%= task.title %></h1> <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %> <i class="fa-regular fa-trash-can"></i> <% end %>
    <% end %>
  <% end %>
</div>
